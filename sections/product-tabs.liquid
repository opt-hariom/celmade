  {% if section.settings.content_type_4 == 'content_page' %}<div class="Tab_4_Set">{{ pages[section.settings.page_4].content }}</div>{% endif %}
  {% if section.settings.content_type_4 == 'content_text' %}<div class="Tab_4_Set">{{ section.settings.content_text_4 }}</div>{% endif %}
</div>

<div id="tabDetail_5" class="celmade_tabcontent">
  {% if section.settings.content_type_5 == 'description' %}<div class="Tab_5_Set">{{ product.description }}</div>{% endif %}
  {% if section.settings.content_type_5 == 'content_page' %}<div class="Tab_5_Set">{{ pages[section.settings.page_5].content }}</div>{% endif %}
  {% if section.settings.content_type_5 == 'content_text' %}<div class="Tab_5_Set">{{ section.settings.content_text_5 }}</div>{% endif %}
</div>
</div>
<script>
function productTab(evt, tabDetail) {
  var i, celmade_tabcontent, celmade_tablinks;
  celmade_tabcontent = document.getElementsByClassName("celmade_tabcontent");
  for (i = 0; i < celmade_tabcontent.length; i++) {
    celmade_tabcontent[i].style.display = "none";
  }
  celmade_tablinks = document.getElementsByClassName("celmade_tablinks");
  for (i = 0; i < celmade_tablinks.length; i++) {
    celmade_tablinks[i].className = celmade_tablinks[i].className.replace(" active", "");
  }
  document.getElementById(tabDetail).style.display = "block";
  if(evt) evt.currentTarget.className += " active";
    else document.querySelector('button.celmade_tablinks').className += " active";
}

document.body.addEventListener('DOMContentLoaded', productTab(event, 'tabDetail_1'));
</script>

