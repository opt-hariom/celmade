{% unless section.settings.full_width %}<div class="article">{% endunless %}
  {% if section.settings.hide_title == false %}
  <div class="container cf" data-cc-animate>
    <div class="page-header cf">
      <h1 class="majortitle">{{ page.title }}</h1>
    </div>
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
  {% else %}
  <div style="display: none;"></div>
  {% endif %}
{% unless section.settings.full_width %}</div>{% endunless %}


{% schema %}
  {
    "name": "Page",
    "class": "page-section-spacing",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "hide_title",
        "label": "Hide Title and Page Content",
        "default": true
      }
    ]
  }
{% endschema %}

